<h1> Your Colleges Newsfeed </h1>

<%if current_user.is_a? Undergrad%>
  <button><div class="upload-photo"> Upload a Photo </div></button>
<%end%>

<div class="photo-stream", data-user-id="<%=current_user.id%>">
  <% @selected_photos.each do |photo|%>
    <div class="photo">
      <img src="<%= photo.url%>">

      <% if photo.undergrad_id == current_user.id %>
      <%= button_to "Delete", user_photo_path(current_user, photo), method: :delete %>
      <%end%>
    </div>

  <%end%>
</div>


<script>
  <%= render "photo.js" %>
</script>